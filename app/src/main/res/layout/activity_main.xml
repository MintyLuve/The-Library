<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/white"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/hamburger_menu"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Welcome to The"
        android:textAlignment="center"
        android:fontFamily="@font/lexend_zetta"
        android:textColor="@color/white"
        android:autoSizeTextType="uniform"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="/* Library */"
        android:textAlignment="center"
        android:fontFamily="@font/lexend_exa"
        android:textStyle="bold"
        android:textColor="@color/mint"
        android:autoSizeTextType="uniform"
        android:layout_weight="2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="- - - - - - - - - - - - - - - - - "
        android:textAlignment="center"
        android:fontFamily="@font/lexend_exa"
        android:textColor="@color/white"
        android:autoSizeTextType="uniform"
        android:layout_weight=".5"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="Continue Your Lessons:"
        android:textAlignment="center"
        android:fontFamily="@font/lexend_zetta"
        android:textColor="@color/white"
        android:autoSizeTextType="uniform"
        android:layout_marginBottom="15dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/large_background"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="4"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/percent1"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                style="@style/text"
                android:text="0% Completed"
                android:fontFamily="@font/lexend_exa"
                android:textColor="@color/dark_grey"
                android:layout_marginBottom="5dp"/>
            <ImageView
                android:id="@+id/pie1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/pie_0"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/text"
                android:text="Intro to Linked Lists"
                android:fontFamily="@font/lexend_exa"
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/button1"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Begin -->"
                style="@style/text"
                android:fontFamily="@font/lexend_exa"
                android:padding="12dp"
                android:textColor="@color/white"
                android:background="@drawable/button_purple_background"
                android:layout_gravity="center"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/large_background"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="4"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/percent2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                style="@style/text"
                android:text="0% Completed"
                android:fontFamily="@font/lexend_exa"
                android:textColor="@color/dark_grey"
                android:layout_marginBottom="5dp"/>
            <ImageView
                android:id="@+id/pie2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/pie_0"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/text"
                android:text="Linked Lists Advanced"
                android:fontFamily="@font/lexend_exa"
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/button2"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Begin -->"
                style="@style/text"
                android:fontFamily="@font/lexend_exa"
                android:padding="12dp"
                android:textColor="@color/white"
                android:background="@drawable/button_purple_background"
                android:layout_gravity="center"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/large_background"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_weight="4"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/percent3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                style="@style/text"
                android:text="0% Completed"
                android:fontFamily="@font/lexend_exa"
                android:textColor="@color/dark_grey"
                android:layout_marginBottom="5dp"/>
            <ImageView
                android:id="@+id/pie3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/pie_0"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                style="@style/text"
                android:text="Doubly Linked Lists"
                android:fontFamily="@font/lexend_exa"
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/button3"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Begin -->"
                style="@style/text"
                android:fontFamily="@font/lexend_exa"
                android:padding="12dp"
                android:textColor="@color/white"
                android:background="@drawable/button_purple_background"
                android:layout_gravity="center"
                android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_weight="1">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_left"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle"
            android:layout_marginEnd="20dp"
            android:backgroundTint="@color/purple"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"/>
        <View
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/circle"
            android:layout_marginEnd="20dp"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/arrow_right"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>